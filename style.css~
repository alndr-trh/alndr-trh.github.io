input[type=range].interface-range {
  width: 100%;
  margin: 5px 0;
  background-color: transparent;
  -webkit-appearance: none;
}
input[type=range].interface-range:focus {
  outline: none;
}
input[type=range].interface-range::-webkit-slider-runnable-track {
  background: rgba(246, 245, 244, 0.78);
  border: 1px solid #3d3d3d;
  border-radius: 5px;
  width: 100%;
  height: 10px;
  cursor: pointer;
}
input[type=range].interface-range::-webkit-slider-thumb {
  margin-top: -6px;
  width: 30px;
  height: 20px;
  background: #cccccc;
  border: 1.8px solid #3d3d3d;
  border-radius: 10px;
  cursor: pointer;
  -webkit-appearance: none;
}
input[type=range].interface-range:focus::-webkit-slider-runnable-track {
  background: #fdfdfc;
}
input[type=range].interface-range::-moz-range-track {
  background: rgba(246, 245, 244, 0.78);
  border: 1px solid #3d3d3d;
  border-radius: 5px;
  width: 100%;
  height: 10px;
  cursor: pointer;
}
input[type=range].interface-range::-moz-range-thumb {
  width: 30px;
  height: 20px;
  background: #cccccc;
  border: 1.8px solid #3d3d3d;
  border-radius: 10px;
  cursor: pointer;
}
input[type=range].interface-range::-ms-track {
  background: transparent;
  border-color: transparent;
  border-width: 5.9px 0;
  color: transparent;
  width: 100%;
  height: 10px;
  cursor: pointer;
}
input[type=range].interface-range::-ms-fill-lower {
  background: #efedec;
  border: 1px solid #3d3d3d;
  border-radius: 10px;
}
input[type=range].interface-range::-ms-fill-upper {
  background: rgba(246, 245, 244, 0.78);
  border: 1px solid #3d3d3d;
  border-radius: 10px;
}
input[type=range].interface-range::-ms-thumb {
  width: 30px;
  height: 20px;
  background: #cccccc;
  border: 1.8px solid #3d3d3d;
  border-radius: 10px;
  cursor: pointer;
  margin-top: 0px;
  /*Needed to keep the Edge thumb centred*/
}
input[type=range].interface-range:focus::-ms-fill-lower {
  background: rgba(246, 245, 244, 0.78);
}
input[type=range].interface-range:focus::-ms-fill-upper {
  background: #fdfdfc;
}
/*TODO: Use one of the selectors from https://stackoverflow.com/a/20541859/7077589 and figure out
how to remove the virtical space around the range input in IE*/
@supports (-ms-ime-align:auto) {
  /* Pre-Chromium Edge only styles, selector taken from hhttps://stackoverflow.com/a/32202953/7077589 */
  input[type=range].interface-range {
    margin: 0;
    /*Edge starts the margin from the thumb, not the track as other browsers do*/
  }
}

